        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Shoplist_add_page"
            android:label="@string/title_activity_shoplist_add_page"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Shoplist_edit_page"
            android:label="@string/title_activity_shoplist_edit_page"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Shoplist_page"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Select_Ingredients"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Add_recipe_page"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Recipe_page"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Ingredient_page"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Shoplist"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Add_Ingredient_page"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Ingredients"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Recipes"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Pop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".PopRcp"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomTheme" />
    </application>

</manifest>