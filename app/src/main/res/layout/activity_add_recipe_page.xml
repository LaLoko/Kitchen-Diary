<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AB8BC34A"
    tools:context=".Add_recipe_page">

    <ImageView
        android:id="@+id/rcp_add_page_image"
        android:layout_width="196dp"
        android:layout_height="189dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <EditText
        android:id="@+id/rcp_add_page_name"
        android:layout_width="374dp"
        android:layout_height="47dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="NAZWA"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/rcp_add_page_vegan"
        android:layout_width="158dp"
        android:layout_height="75dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="56dp"
        android:text="WEGAŃSKIE"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/rcp_add_page_desc"
        android:layout_width="363dp"
        android:layout_height="202dp"
        android:layout_marginTop="384dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/rcp_add_page_ing_list"
        android:layout_width="363dp"
        android:layout_height="140dp"
        android:layout_marginTop="244dp"
        android:smoothScrollbar="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rcp_add_page_add_ing_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="204dp"
        android:layout_marginTop="196dp"
        android:text="Dodaj Składnik"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rcp_add_page_submit_btn"
        android:layout_width="373dp"
        android:layout_height="61dp"
        android:layout_marginTop="600dp"
        android:text="Dodaj Przepis"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/rcp_add_page_occasion"
        android:layout_width="162dp"
        android:layout_height="74dp"
        android:layout_marginStart="195dp"
        android:layout_marginTop="121dp"
        android:ems="10"
        android:hint="okazja"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>