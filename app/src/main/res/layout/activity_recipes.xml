<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#51FFC107"
    tools:context=".Recipes">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="421dp"
        android:layout_height="590dp"
        android:layout_marginTop="141dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ListView
            android:id="@+id/rcp_list"
            android:layout_width="386dp"
            android:layout_height="529dp"
            android:layout_marginTop="24dp"
            android:smoothScrollbar="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="402dp"
        android:layout_height="167dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Switch
            android:id="@+id/available_rcp"
            android:layout_width="182dp"
            android:layout_height="57dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="4dp"
            android:text="Pokaż dostępne"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/vegan_rcp"
            android:layout_width="157dp"
            android:layout_height="59dp"
            android:layout_marginStart="191dp"
            android:layout_marginTop="3dp"
            android:text="Pokaż wegańskie"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/rcp_add"
            android:layout_width="147dp"
            android:layout_height="53dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="60dp"
            android:text="Dodaj"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/rcp_sort"
            android:layout_width="134dp"
            android:layout_height="52dp"
            android:layout_marginStart="216dp"
            android:layout_marginTop="60dp"
            android:text="Sortuj"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/rcp_search_text"
            android:layout_width="245dp"
            android:layout_height="47dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="115dp"
            android:ems="10"
            android:hint="tekst rozdziel przecinkami"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/rcp_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="253dp"
            android:layout_marginTop="115dp"
            android:text="wyszukaj"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>