    <TextView
        android:id="@+id/rcp_page_prot_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="120dp"
        android:text="białko"
        android:textColor="#F44336"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/rcp_page_ing_in_dish"
        android:layout_width="357dp"
        android:layout_height="159dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="288dp"
        android:smoothScrollbar="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rcp_page_add_to_shoplist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:text="dodaj brakujące składniki do listy zakupów"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rcp_page_cook"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="479dp"
        android:text="UGOTUJ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>