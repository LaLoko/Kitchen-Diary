        android:layout_marginStart="168dp"
        android:layout_marginTop="48dp"
        android:text="vegańskie"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rcp_page_occasion"
        android:layout_width="282dp"
        android:layout_height="23dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="168dp"
        android:text="okazja"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rcp_page_kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="72dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rcp_page_kcal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="72dp"
        android:text="kalorie"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rcp_page_dish_type"
        android:layout_width="70dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="168dp"
        android:text="typ dania :"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rcp_page_how_to"
        android:layout_width="355dp"
        android:layout_height="221dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="448dp"
        android:scrollbars="vertical"
        android:text="description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rcp_page_name"
        android:layout_width="164dp"
        android:layout_height="50dp"
        android:layout_marginStart="168dp"
        android:text="name"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rcp_page_img"
        android:layout_width="164dp"
        android:layout_height="169dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/rcp_page_fat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="144dp"
        android:text="tłuszcze"
